@model IEnumerable<Models.Approvisionnement>

@{
    ViewData["Title"] = "Gestion des Approvisionnements";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Gestion des Approvisionnements</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Nouvel approvisionnement
                </a>
            </div>
        </div>
    </div>

    <div class="container-fluid px-4">
        <!-- Filtres et recherche -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Filtres et recherche</h5>
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="search" placeholder="Rechercher..." value="@Context.Request.Query["search"]">
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="fournisseurId">
                            <option value="">Tous les fournisseurs</option>
                            @foreach (var fournisseur in ViewBag.Fournisseurs)
                            {
                                <option value="@fournisseur.Id" selected="@(Context.Request.Query["fournisseurId"] == fournisseur.Id.ToString())">
                                    @fournisseur.Nom
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="articleId">
                            <option value="">Tous les articles</option>
                            @foreach (var article in ViewBag.Articles)
                            {
                                <option value="@article.Id" selected="@(Context.Request.Query["articleId"] == article.Id.ToString())">
                                    @article.Nom
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-filter">
                            <i class="bi bi-funnel me-2"></i>Filtrer
                        </button>
                    </div>
                </form>
                <form method="get" class="row g-3 mt-2">
                    <div class="col-md-2">
                        <label class="form-label small">Du</label>
                        <input type="date" class="form-control" name="dateDebut" value="@ViewBag.DateDebut">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small">Au</label>
                        <input type="date" class="form-control" name="dateFin" value="@ViewBag.DateFin">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small">Trier par</label>
                        <select class="form-select" name="sortOrder">
                            <option value="date_desc" selected>Date (récent → ancien)</option>
                            <option value="date_asc">Date (ancien → récent)</option>
                            <option value="montant_desc">Montant (décroissant)</option>
                            <option value="montant_asc">Montant (croissant)</option>
                        </select>
                    </div>
                    <div class="col-md-3 offset-md-2">
                        <label class="form-label small">&nbsp;</label>
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-arrow-clockwise me-2"></i>Réinitialiser
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tableau des approvisionnements -->
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Référence</th>
                            <th>Date</th>
                            <th>Fournisseur</th>
                            <th>Articles</th>
                            <th>Montant total</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.Reference</strong></td>
                                    <td>@item.DateApprovisionnement.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Fournisseur?.Nom</td>
                                    <td>
                                        <span class="badge-articles">
                                            @(item.ApprovisionnementArticlesNavigation?.Count ?? 0) article(s)
                                        </span>
                                    </td>
                                    <td><strong>@item.MontantTotal.ToString("N0") FCFA</strong></td>
                                    <td>
                                        @if (item.Statut == "Livré")
                                        {
                                            <span class="status-badge status-recu">@item.Statut</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-attente">@item.Statut</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm action-btn" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm action-btn" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
                                            <button type="submit" class="btn btn-danger btn-sm action-btn" title="Supprimer"
                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet approvisionnement ?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">Aucun approvisionnement trouvé</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.PageCount > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                                   asp-route-dateDebut="@ViewBag.DateDebut"
                                   asp-route-dateFin="@ViewBag.DateFin"
                                   asp-route-search="@Context.Request.Query["search"]"
                                   asp-route-fournisseurId="@Context.Request.Query["fournisseurId"]"
                                   asp-route-articleId="@Context.Request.Query["articleId"]"
                                   asp-route-sortOrder="@Context.Request.Query["sortOrder"]">
                                    Précédent
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@i"
                                   asp-route-dateDebut="@ViewBag.DateDebut"
                                   asp-route-dateFin="@ViewBag.DateFin"
                                   asp-route-search="@Context.Request.Query["search"]"
                                   asp-route-fournisseurId="@Context.Request.Query["fournisseurId"]"
                                   asp-route-articleId="@Context.Request.Query["articleId"]"
                                   asp-route-sortOrder="@Context.Request.Query["sortOrder"]">
                                    @i
                                </a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.PageCount)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                                   asp-route-dateDebut="@ViewBag.DateDebut"
                                   asp-route-dateFin="@ViewBag.DateFin"
                                   asp-route-search="@Context.Request.Query["search"]"
                                   asp-route-fournisseurId="@Context.Request.Query["fournisseurId"]"
                                   asp-route-articleId="@Context.Request.Query["articleId"]"
                                   asp-route-sortOrder="@Context.Request.Query["sortOrder"]">
                                    Suivant
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>